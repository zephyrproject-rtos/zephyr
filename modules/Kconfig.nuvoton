	select HAS_CMSIS_CORE
	depends on SOC_FAMILY_NUMICRO

menu "Nuvoton drivers"
	depends on HAS_NUMICRO_HAL

config HAS_NUMICRO_UART
	bool "NuMicro UART"
	help
	  Enable Nuvoton Universal asynchronous receiver transmitter HAL
	  module driver

endmenu

