&tcc0 {
	status = "disabled";
};

&tc7 {
	status = "okay";
	compatible = "microchip,tc-g1-pwm";
	prescaler = <1>;
	#pwm-cells = <3>;
	pinctrl-0 = <&tc7_pwm_default>;
	pinctrl-names = "default";
};

&pinctrl {
	tc7_pwm_default: tc7_pwm_default {
		group1 {
			pinmux = <PA20E_TC7_WO0>,
				 <PA21E_TC7_WO1>;
		};
	};
};
