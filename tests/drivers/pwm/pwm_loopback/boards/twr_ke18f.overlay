#include <dt-bindings/pwm/pwm.h>

/ {
	pwm_loopback_0 {
		compatible = "test,pwm_loopback";
		pwms = <&ftm2 6 0 PWM_POLARITY_NORMAL>, /* PTE15, J20 pin 5 */
		       <&pwt 1 0 PWM_POLARITY_NORMAL>;  /* PTE11, J20 pin 8 */
	};
};

&pwt {
	status = "okay";
	prescaler = <32>;
};

&ftm2 {
	status = "okay";
	compatible = "nxp,kinetis-ftm-pwm";
	prescaler = <128>;
	#pwm-cells = <3>;
};
