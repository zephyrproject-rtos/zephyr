/ {
	test {
		#address-cells = <1>;
		#size-cells = <1>;

		test_gpio: gpio@deadbeef {
			compatible = "vnd,gpio";
			gpio-controller;
			reg = <0xdeadbeef 0x1000>;
			#gpio-cells = <0x2>;
			status = "okay";
		};

		test_spi: spi@33334444 {
			#address-cells = <1>;
			#size-cells = <0>;
			compatible = "vnd,spi";
			reg = <0x33334444 0x1000>;
			status = "okay";
			clock-frequency = <2000000>;

			/* one entry for every devices at spi.dtsi */
			cs-gpios = <&test_gpio 0 0>,
				   <&test_gpio 0 0>,
				   <&test_gpio 0 0>,
				   <&test_gpio 0 0>,
				   <&test_gpio 0 0>;

			test_spi_pt6314: pt6314@0 {
				compatible = "ptc,pt6314";
				reg = <0>;
				status = "okay";
				spi-max-frequency = <1000000>;
				columns = <20>;
				rows = <2>;
			};

			test_spi_max7219_7seg: max7219-7seg@1 {
				compatible = "maxim,max7219-7seg";
				reg = <1>;
				status = "okay";
				spi-max-frequency = <1000000>;
				columns = <16>;
				rows = <1>;
				intensity = <7>;
				scan-limit = <7>;
			};
		};
	};
};
