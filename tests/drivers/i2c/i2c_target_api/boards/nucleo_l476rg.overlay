/* I2C bus pins are exposed in the Arduino Uno header.
 *
 *  Bus        SDA          SCL
 *          Pin   Hdr    Pin   Hdr
 *  i2c1    PB9   D14    PB8   D15
 *  i2c3    PC1   A4     PC0   A5
 *
 * Short D14 to A4, and D15 to A5, for the test to pass.
 */

&i2c1 {
	eeprom0: eeprom@54 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x54>;
		address-width = <16>;
		size = <1024>;
	};
	eeprom2: eeprom@58 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x58>;
		size = <4096>;
		address-width = <16>;
		read-only;
	};
};

&i2c3 {
	eeprom1: eeprom@56 {
		compatible = "zephyr,i2c-target-eeprom";
		reg = <0x56>;
		address-width = <16>;
		size = <1024>;
	};
};
