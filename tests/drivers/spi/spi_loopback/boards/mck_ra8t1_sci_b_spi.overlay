&pinctrl {
	sci0_spi_default: sci0_spi_default {
		group1 {
			/* MISO MOSI SCK */
			psels = <RA_PSEL(RA_PSEL_SCI_0, 6, 2)>,
				<RA_PSEL(RA_PSEL_SCI_0, 6, 3)>,
				<RA_PSEL(RA_PSEL_SCI_0, 6, 1)>;
			drive-strength = "high";
		};
	};
};

&sci0 {
	pinctrl-0 = <&sci0_spi_default>;
	pinctrl-names = "default";

	spi {
		status = "okay";

		slow@0 {
			compatible = "test-spi-loopback-slow";
			reg = <0>;
			spi-max-frequency = <1000000>;
		};

		fast@0 {
			compatible = "test-spi-loopback-fast";
			reg = <0>;
			spi-max-frequency = <2500000>;
		};
	};

	uart {
		status = "disabled";
	};

	i2c {
		status = "disabled";
	};
};
