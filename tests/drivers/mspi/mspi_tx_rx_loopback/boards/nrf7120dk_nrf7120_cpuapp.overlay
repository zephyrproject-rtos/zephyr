/*
 * Loopbacks required:
 * QSPI01    QSPI00
 * P2.6  <-> P2.1 SCK
 * P2.11 <-> P2.5 CSN
 * P2.7  <-> P2.0 DQ0
 * P2.8  <-> P2.2 DQ1
 * P2.9  <-> P2.3 DQ2
 * P2.10 <-> P2.4 DQ3
 */

&pinctrl {
	qspi01_default: qspi01_default {
		group1 {
			psels = <NRF_PSEL(QSPI_SCK, 2, 6)>,
				<NRF_PSEL(QSPI_CSN, 2, 11)>,
				<NRF_PSEL(QSPI_IO0, 2, 7)>,
				<NRF_PSEL(QSPI_IO1, 2, 8)>,
				<NRF_PSEL(QSPI_IO2, 2, 9)>,
				<NRF_PSEL(QSPI_IO3, 2, 10)>;
		};
	};

	qspi01_sleep: qspi01_sleep {
		group1 {
			low-power-enable;
			psels = <NRF_PSEL(QSPI_SCK, 2, 6)>,
				<NRF_PSEL(QSPI_CSN, 2, 11)>,
				<NRF_PSEL(QSPI_IO0, 2, 7)>,
				<NRF_PSEL(QSPI_IO1, 2, 8)>,
				<NRF_PSEL(QSPI_IO2, 2, 9)>,
				<NRF_PSEL(QSPI_IO3, 2, 10)>;
		};
	};
};

&uart00 {
	status = "disabled";
};

&spi00 {
	status = "disabled";
};

controller: &qspi00 {
	status = "okay";
	pinctrl-names = "default", "sleep";
	op-mode = "MSPI_OP_MODE_CONTROLLER";
};

peripheral: &qspi01 {
	status = "okay";
	pinctrl-0 = <&qspi01_default>;
	pinctrl-1 = <&qspi01_sleep>;
	pinctrl-names = "default", "sleep";
	op-mode = "MSPI_OP_MODE_PERIPHERAL";
};
