dut: &sercom1 {
	status = "okay";
	compatible = "microchip,sercom-g1-uart";
	current-speed = <115200>;
	#address-cells = <1>;
	#size-cells = <0>;

	/* Internally loop-back TX and RX on PAD0 */
	rxpo = <0>;
	txpo = <0>;

	pinctrl-0 = <&sercom1_uart_default>;
	pinctrl-names = "default";

	dmas = <&dmac 0x3 0x6>, <&dmac 0x4 0x7>;
	dma-names = "rx", "tx";
};

/* Pin configuration */
&pinctrl {
	sercom1_uart_default: sercom1_uart_default {
		group1 {
			pinmux = <PC22C_SERCOM1_PAD0>,
				 <PC23C_SERCOM1_PAD1>;
		};
	};
};
