&dma0 {
	status = "okay";
};

dut: &scb4 {
	compatible = "infineon,cat1-uart";
	status = "okay";
	current-speed = <115200>;

	clocks = <&peri0_group4_8bit_1>;

	pinctrl-0 = <&p4_3_scb4_uart_tx &p4_2_scb4_uart_rx>;
	pinctrl-names = "default";

	dmas = <&dma0 0>, <&dma0 1>;
	dma-names = "tx", "rx";
};

&p4_3_scb4_uart_tx {
	drive-push-pull;
};

&p4_2_scb4_uart_rx {
	input-enable;
};

&peri0_group4_8bit_1 {
	status = "okay";
	resource-type = <IFX_RSC_SCB>;
	resource-instance = <4>;
	clock-div = <109>;
};
