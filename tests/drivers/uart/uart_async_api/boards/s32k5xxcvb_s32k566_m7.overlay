&pinctrl {
	lpe_lpuart0_default: lpe_lpuart0_default {
		group1 {
			pinmux = <PA1_LPUART0_TX_O>, <PE2_LPUART0_RTS>;
			output-enable;
		};
		group2 {
			pinmux = <PB6_LPUART0_RX>, <PE5_LPUART0_CTS>;
			input-enable;
		};
	};
};

dut: &lpuart0 {
	pinctrl-0 = <&lpe_lpuart0_default>;
	pinctrl-names = "default";
	dmas = <&edma 0 94>, <&edma 2 93>;
	dma-names = "tx", "rx";
	current-speed = <115200>;
	nxp,loopback;
	status = "okay";
};
