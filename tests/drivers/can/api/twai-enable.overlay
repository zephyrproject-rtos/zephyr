/* Enable CAN bus */
&twai {
	status = "okay";
	pinctrl-0 = <&twai_default>;
	pinctrl-names = "default";

	can-transceiver {
		max-bitrate = <1000000>;
	};
};

&pinctrl {
	twai_default: twai_default {
		group1 {
			pinmux = <TWAI_RX_GPIO5>;
			output-enable;	/* enable internal loopback */
		};
		group2 {
			pinmux = <TWAI_TX_GPIO5>;
			input-enable;	/* enable internal loopback */
		};
	};
};
