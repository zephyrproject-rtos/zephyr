menuconfig LORAWAN
	bool "LoRaWAN support [EXPERIMENTAL]"
	depends on LORA
	select REQUIRES_FULL_LIBC
	select EXPERIMENTAL
	help
	  This option enables LoRaWAN support.

if LORAWAN

module = LORAWAN
module-str = lorawan
source "subsys/logging/Kconfig.template.log_config"

rsource "loramac-node/Kconfig"

rsource "nvm/Kconfig"

rsource "services/Kconfig"

endif # LORAWAN
