menuconfig NVMEM
	bool "Non Volatile Memory (NVMEM)"

if NVMEM

config NVMEM_EEPROM
	bool "NVMEM support for EEPROM devices"
	default y
	depends on EEPROM

config NVMEM_FUSE
	bool "NVMEM support for fuse handling devices"
	default y
	depends on FUSE

module = NVMEM
module-str = nvmem
source "subsys/logging/Kconfig.template.log_config"

endif # NVMEM
