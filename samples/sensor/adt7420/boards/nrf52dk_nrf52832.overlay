&i2c0 { /* SDA P0.26, SCL P0.27, ALERT P0.11 */
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;

	adt7420@48 {
		compatible = "adi,adt7420";
		reg = <0x48>;
		int-gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
	};
};
