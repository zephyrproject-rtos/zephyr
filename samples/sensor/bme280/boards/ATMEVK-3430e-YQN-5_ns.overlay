&spi1 {
	status = "okay";
	bme280@0 {
		compatible = "bosch,bme280";
		reg = <0>;
		label = "BME280_SPI";
		spi-max-frequency = <1000000>;
	};
};

&i2c0 {
	status = "okay";
	bme280@0 {
		compatible = "bosch,bme280";
		reg = <0>;
		label = "BME280_I2C";
	};
};
