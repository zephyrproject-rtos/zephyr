/ {
	aliases {
		hx711-sensor = &hx711;
	};

	hx711:hx711 {
			compatible = "avia,hx711";
			status = "okay";
			rate-hz = <1>;
    		dout-gpios = <&gpio0 30 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    		sck-gpios = <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    		rate-gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>;
		};
};
