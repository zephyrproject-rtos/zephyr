/ {
	aliases {
		hx711-sensor = &hx711_label;
	};

	hx711_label: hx711_node {
		compatible = "avia,hx711";
		gain = <64>;
		rate-hz = <80>;
		dout-gpios = <&arduino_header 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		sck-gpios = <&arduino_header 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		rate-gpios = <&arduino_header 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
	};

	hx712_label: hx712_node {
		compatible = "avia,hx712", "avia,hx710";
		status = "disabled";
		dout-gpios = <&arduino_header 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		sck-gpios = <&arduino_header 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
	};

	hx717_label: hx717_node {
		compatible = "avia,hx717";
		status = "disabled";
		gain = <128>;
		rate-hz = <80>;
		dout-gpios = <&arduino_header 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		sck-gpios = <&arduino_header 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		rate-gpios =
				<&arduino_header 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,
				<&arduino_header 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
	};

	hx71708_label: hx71708_node {
		compatible = "avia,hx71708";
		status = "disabled";
		dout-gpios = <&arduino_header 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
		sck-gpios = <&arduino_header 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
	};
};
