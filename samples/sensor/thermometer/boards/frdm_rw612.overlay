/* Enable standby low power mode (AKA PM3, or Sleep mode) */
&standby {
	status = "okay";
};

&peripheral_domain {
	zephyr,pm-device-runtime-auto;
	status = "okay";
};

&flexcomm3 {
	zephyr,pm-device-runtime-auto;
	status = "okay";
};

&flexcomm2 {
	zephyr,pm-device-runtime-auto;
	status = "okay";
};

&p3t1755 {
	zephyr,pm-device-runtime-auto;
	status = "okay";
};
