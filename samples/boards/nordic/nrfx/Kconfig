source "Kconfig.zephyr"

config NRFX_GPIOTE0
	default y if SOC_SERIES_NRF51 || \
		     SOC_SERIES_NRF52 || \
		     (SOC_SERIES_NRF53 && !TRUSTED_EXECUTION_NONSECURE) || \
		     (SOC_SERIES_NRF91 && !TRUSTED_EXECUTION_NONSECURE)

config NRFX_GPIOTE1
	default y if (SOC_SERIES_NRF53 && TRUSTED_EXECUTION_NONSECURE) || \
		     (SOC_SERIES_NRF91 && TRUSTED_EXECUTION_NONSECURE)
