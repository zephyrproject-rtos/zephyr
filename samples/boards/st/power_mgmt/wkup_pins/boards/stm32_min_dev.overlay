#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	/* the board has no actual button, you need to connect PA0 to GND with a jumper wire */
	/* also the internall PA0 pull-up seems to stop on poweroff mode so need an external resistor */
	/* current draw of 57nA after removing R1 (PWR LED) and U1 (3.3V regulator) from the board */
	gpio_keys {
		compatible = "gpio-keys";

		user_button: button_0 {
			label = "User SW0";
			gpios = <&gpioa 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	aliases {
		wkup-src = &user_button;
	};
};

&pwr {
	status = "okay";
};
