&emdio {
	status = "okay";

	phy0: phy@2 {
		status = "okay";
	};

	phy1: phy@3 {
		status = "okay";
	};

	phy2: phy@5 {
		status = "okay";
	};

	phy3: phy@6 {
		status = "okay";
	};

	phy4: phy@7 {
		status = "okay";
	};
};

&enetc_psi0 {
	ptp-clock = <&netc_ptp_clock0>;
	status = "okay";
};

&enetc_psi1 {
	ptp-clock = <&netc_ptp_clock0>;
	status = "okay";
};

&enetc_psi2 {
	ptp-clock = <&netc_ptp_clock0>;
	status = "okay";
};

/* Internal port */
&enetc_psi3 {
	status = "okay";
};

&netc_switch {
	status = "okay";

	switch_port0: switch_port@0 {
		ptp-clock = <&netc_ptp_clock0>;
		status = "okay";
	};

	switch_port1: switch_port@1 {
		ptp-clock = <&netc_ptp_clock0>;
		status = "okay";
	};

	/* Internal port */
	switch_port3: switch_port@3 {
		status = "okay";
	};
};

&netc_ptp_clock0 {
	status = "okay";
};
