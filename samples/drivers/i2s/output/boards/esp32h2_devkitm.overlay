/ {
	aliases {
		i2s-tx = &i2s;
	};
};

&i2s_default {
	group1 {
		pinmux = <I2S_O_WS_GPIO5>,
			 <I2S_O_BCK_GPIO14>,
			 <I2S_O_SD_GPIO22>;
	};
};

&i2s {
	status = "okay";

	dmas = <&dma 3>;
	dma-names = "tx";
};

&dma {
	status = "okay";
};
