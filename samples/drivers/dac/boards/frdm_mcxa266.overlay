/ {
	alias {
		second_uart = &lpuart3;
	};

	chosen {
		zephyr,console = &lpuart3;
		zephyr,shell-uart = &lpuart3;
	};

	/*
	 * DAC0 output signal port is J1-4(P2_2).
	 */
	zephyr,user {
		dac = <&dac0>;
		dac-channel-id = <0>;
		dac-resolution = <12>;
	};
};

&lpuart2 {
	status = "disabled";
};

&lpuart3 {
	status = "okay";
};
