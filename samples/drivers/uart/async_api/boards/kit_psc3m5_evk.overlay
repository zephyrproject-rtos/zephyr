&dma0 {
	status = "okay";
};

&scb3 {
	compatible = "infineon,cat1-uart";
	status = "okay";
	current-speed = <115200>;

	clocks = <&peri0_group4_8bit_0>;

	pinctrl-0 = <&p6_3_scb3_uart_tx &p6_2_scb3_uart_rx>;
	pinctrl-names = "default";

	dmas = <&dma0 0>, <&dma0 1>;
	dma-names = "tx", "rx";
};
