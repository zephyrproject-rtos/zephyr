/ {
	vhost {
		rng {
			compatible = "xen,vhost-mmio";
			device-id = <4>;
			vendor-id = <0x7a707972>; /* "zphy" */
			num-queues = <2>;
			queue-size-max = <16>;
			base = <0x2000000>;
		};
	};

	chosen {
		zephyr,shell-uart = &xen_hvc;
	};
};
