#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/pwm/pwm_ifx_tcpwm.h>

/ {
	aliases {
		pwm-led0 = &pwm_led0;
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm0_7 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
			label = "PWM LED";
		};
		status = "okay";
	};
};

&tcpwm0_7 {
	status = "okay";

	pwm0_7: pwm0_7 {
		status = "okay";
		clocks = <&peri0_group1_16bit_1>;
		pinctrl-0 = <&p16_7_pwm0_7>;
		pinctrl-names = "default";
	};
};

&peri0_group1_16bit_1 {
	status = "okay";
	resource-type = <IFX_RSC_TCPWM>;
	resource-instance = <0>;
	resource-channel = <7>;
	clock-div = <9600>;
};

&pinctrl {
	p16_7_pwm0_7: p16_7_pwm0_7 {
		drive-push-pull;
	};
};
