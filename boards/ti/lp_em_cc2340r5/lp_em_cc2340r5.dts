/dts-v1/;

#include <ti/cc2340r5.dtsi>
#include "boosterpack_connector.dtsi"
#include "lp_em_cc2340r5-pinctrl.dtsi"
#include <zephyr/dt-bindings/gpio/gpio.h>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "LP_EM_CC2340R5";
	compatible = "ti,lp_em_cc2340r5";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
	};

	aliases {
		led0 = &led0;
		led1 = &led1;
		sw0 = &btn0;
		sw1 = &btn1;
		watchdog0 = &wdt0;
		pwm-led0 = &pwm_green;
		pwm-led1 = &pwm_red;
	};

	leds {
		compatible = "gpio-leds";

		led0: led_0 {
			gpios = <&gpio0 15 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};

		led1: led_1 {
			gpios = <&gpio0 14 GPIO_ACTIVE_HIGH>;
			label = "Red LED";
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		pwm_green: pwm_led_0 {
			pwms = <&pwm6 0 1000 PWM_POLARITY_NORMAL>;
			label = "Green PWM LED";
		};

		pwm_red: pwm_led_1 {
			pwms = <&pwm5 0 1000 PWM_POLARITY_NORMAL>;
			label = "Red PWM LED";
		};
	};

	keys {
		compatible = "gpio-keys";

		btn0: btn_0 {
			gpios = <&gpio0 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Button 1";
			zephyr,code = <INPUT_KEY_0>;
		};

		btn1: btn_1 {
			gpios = <&gpio0 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			label = "Button 2";
			zephyr,code = <INPUT_KEY_1>;
		};
	};
};

&gpio0 {
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_rx_default &uart0_tx_default>;
	pinctrl-names = "default";
};

&aes {
	status = "okay";
};

&dma {
	status = "okay";
};

&spi0 {
	status = "okay";
	pinctrl-0 = <&spi0_sck_default
		     &spi0_mosi_default
		     &spi0_miso_default
		     &spi0_cs_default>;
	pinctrl-names = "default";
};

&wdt0 {
	status = "okay";
};

&adc0 {
	status = "okay";
	pinctrl-0 = <&adc0_ch0
		     &adc0_ch2
		     &adc0_ch3
		     &adc0_ch4
		     &adc0_ch6
		     &adc0_ch8>;
	pinctrl-names = "default";
};

&lgpt1 {
	clk-prescale = <0>;
	status = "okay";
};

&lgpt2 {
	clk-prescale = <0>;
	status = "okay";
};

&pwm5 {
	pinctrl-0 = <&pwm5_default>;
	pinctrl-names = "default";
	status = "okay";
};

&pwm6 {
	pinctrl-0 = <&pwm6_default>;
	pinctrl-names = "default";
	status = "okay";
};

&i2c0 {
	status = "okay";
	pinctrl-0 = <&i2c0_scl_default
		     &i2c0_sda_default>;
	clock-frequency = <100000>;
	pinctrl-names = "default";
};
