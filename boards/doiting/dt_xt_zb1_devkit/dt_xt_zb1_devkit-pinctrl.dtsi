#include <dt-bindings/pinctrl/bl702x-pinctrl.h>

&pinctrl {
	uart0_default: uart0_default {
		group1 {
			pinmux = <GPIO15_UART0_RX>,
				 <GPIO14_UART0_TX>;
			bias-pull-up;
			input-schmitt-enable;
		};
	};

	uart0_sleep: uart0_sleep {
		group1 {
			pinmux = <GPIO15_UART0_RX>,
				 <GPIO14_UART0_TX>;
			bias-high-impedance;
		};
	};

	spi0_default: spi0_default {
		group1 {
			pinmux = <GPIO7_SPI_SCLK>,
				 <GPIO8_SPI_MOSI>,
				 <GPIO9_SPI_MISO>;
			bias-pull-up;
			input-schmitt-enable;
		};
	};
};
