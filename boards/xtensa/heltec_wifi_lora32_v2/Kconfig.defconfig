config BOARD
	default "heltec_wifi_lora32"
	depends on BOARD_HELTEC_WIFI_LORA32

config ENTROPY_GENERATOR
	default y

config HEAP_MEM_POOL_SIZE
	default 98304 if WIFI
	default 40960 if BT
	default 4096

choice BT_HCI_BUS_TYPE
	default BT_ESP32 if BT
endchoice
