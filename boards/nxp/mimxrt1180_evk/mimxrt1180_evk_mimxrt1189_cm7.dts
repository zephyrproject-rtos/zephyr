/dts-v1/;

#include <nxp/nxp_rt118x_cm7.dtsi>
#include "mimxrt1180_evk.dtsi"

/ {
	model = "NXP MIMXRT1180-EVK board";
	compatible = "nxp,mimxrt1189";

	chosen {
		zephyr,sram = &dtcm;
		zephyr,flash-controller = &w25q128jw;
		zephyr,flash = &itcm;
		zephyr,console = &lpuart1;
		zephyr,shell-uart = &lpuart1;
		zephyr,canbus = &flexcan3;
	};
};

&enetc_psi0 {
	status = "disabled";
};

&lpuart1 {
	status = "okay";
	current-speed = <115200>;
};

&lpadc1 {
	status = "okay";
};

&systick {
	status = "okay";
};

&gpt2 {
	status = "okay";
};

&flexcan3 {
	status = "okay";
};

&lptmr1 {
	status = "okay";
};

&i3c2 {
	status = "okay";
};

&lpspi3 {
	status = "okay";
};

&edma3 {
	status = "okay";
};

&edma4 {
	status = "okay";
};

zephyr_udc0: &usb1 {
	status = "okay";
	phy-handle = <&usbphy1>;
};

&usbphy1 {
	status = "okay";
	tx-d-cal = <7>;
	tx-cal-45-dp-ohms = <6>;
	tx-cal-45-dm-ohms = <6>;
};
