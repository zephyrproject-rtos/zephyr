/dts-v1/;

#include <nxp/nxp_lpc55S2x.dtsi>
#include "lpcxpresso55s28_common.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	compatible = "nxp,lpc55xxx", "nxp,lpc";
	model = "NXP LPCXpresso55S28 board";

	aliases {
		sw0 = &user_button_1;
		sw1 = &user_button_2;
		sw2 = &user_button_3;
		watchdog0 = &wwdt0;
		accel0 = &mma8652fc;
		mcuboot-button0 = &user_button_1;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,uart-mcumgr = &flexcomm0;
		zephyr,console = &flexcomm0;
		zephyr,shell-uart = &flexcomm0;
		zephyr,entropy = &rng;
		zephyr,flash-controller = &iap;
	};

	gpio_keys {
		compatible = "gpio-keys";

		user_button_1: button_0 {
			label = "User SW1";
			gpios = <&gpio0 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_0>;
		};

		user_button_2: button_1 {
			label = "User SW2";
			gpios = <&gpio1 18 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_1>;
		};

		user_button_3: button_2 {
			label = "User SW3";
			gpios = <&gpio1 9 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_2>;
		};
	};
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&green_led {
	status = "okay";
};

&red_led {
	status = "okay";
};

&flexcomm0 {
	status = "okay";
};

&flexcomm4 {
	status = "okay";
};

&hs_lspi {
	dmas = <&dma0 2>, <&dma0 3>;
	dma-names = "rx", "tx";
	status = "okay";
};

&wwdt0 {
	status = "okay";
};

&adc0 {
	pinctrl-0 = <&pinmux_lpadc0>;
	pinctrl-names = "default";
	status = "okay";
};

&dma0 {
	status = "okay";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			reg = <0x0 DT_SIZE_K(32)>;
			label = "mcuboot";
		};

		slot0_partition: partition@8000 {
			reg = <0x00008000 DT_SIZE_K(208)>;
			label = "image-0";
		};

		slot1_partition: partition@3C000 {
			reg = <0x0003C000 DT_SIZE_K(208)>;
			label = "image-1";
		};

		storage_partition: partition@70000 {
			reg = <0x00070000 DT_SIZE_K(52)>;
			label = "storage";
		};
		/* The last 12KBs are reserved for PFR. */
	};
};

zephyr_udc0: &usbhs {
	phy-handle = <&usbphy1>;
	status = "okay";
};

zephyr_uhc0: &usbhfs {
	pinctrl-0 = <&pinmux_usbhfs>;
	pinctrl-names = "default";
	status = "okay";
};

zephyr_uhc1: &usbhhs {
	pinctrl-0 = <&pinmux_usbhhs>;
	pinctrl-names = "default";
	phy-handle = <&usbphy1>;
	status = "okay";
};

&usbphy1 {
	tx-d-cal = <5>;
	tx-cal-45-dp-ohms = <10>;
	tx-cal-45-dm-ohms = <10>;
	status = "okay";
};

&sdif {
	pinctrl-0 = <&pinmux_sdif_default>;
	pinctrl-names = "default";
	status = "okay";

	mmc {
		compatible = "zephyr,sdmmc-disk";
		disk-name = "SD";
		status = "okay";
	};
};
