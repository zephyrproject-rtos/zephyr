/ {
	aliases {
		led0 = &green_led;
		led1 = &red_led;
		led2 = &blue_led;
		sdhc0 = &usdhc1;
	};

	leds {
		compatible = "gpio-leds";

		green_led: led-1 {
			gpios = <&gpio5 2 GPIO_ACTIVE_HIGH>;
			label = "Green LED";
		};

		red_led: led-2 {
			gpios = <&gpio5 1 GPIO_ACTIVE_LOW>;
			label = "Red LED";
		};

		blue_led: led-3 {
			gpios = <&gpio1 13 GPIO_ACTIVE_LOW>;
			label = "Blue LED";
		};
	};
};

