/dts-v1/;

#include <nxp/nxp_mcxw70.dtsi>
#include "frdm_mcxw70-pinctrl.dtsi"
#include <zephyr/dt-bindings/gpio/arduino-header-r3.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "NXP FRDM-MCXW70 board";

	aliases {
		led0 = &blue_led;
		blue-pwm-led = &blue_pwm_led;
		green-pwm-led = &green_pwm_led;
		red-pwm-led = &red_pwm_led;
		sw0 = &user_button_0;
	};

	chosen {
		zephyr,flash = &flash;
		zephyr,flash-controller = &fmu;
		zephyr,code-partition = &code_partition;
		zephyr,sram = &stcm0;
		zephyr,console = &lpuart1;
		zephyr,shell-uart = &lpuart1;
		zephyr,uart-pipe = &lpuart0;
		zephyr,canbus = &flexcan0;
		zephyr,bt-c2h-uart = &lpuart0;
	};

	user_led {
		compatible = "gpio-leds";

		red_led: red_led {
			gpios = <&gpio_d 2 GPIO_ACTIVE_HIGH>;
		};

		green_led: green_led {
			gpios = <&gpio_d 3 GPIO_ACTIVE_HIGH>;
		};

		blue_led: blue_led {
			gpios = <&gpio_c 7 GPIO_ACTIVE_HIGH>;
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		red_pwm_led: pwm_led_2 {
			pwms = <&tpm_2 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		green_pwm_led: pwm_led_1 {
			pwms = <&tpm_2 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		blue_pwm_led: pwm_led_0 {
			pwms = <&tpm_0 2 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		user_button_0: button_0 {
			label = "User SW4";
			gpios = <&gpio_a 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_0>;
			status = "okay";
		};
	};

	arduino_header: arduino-connector {
		compatible = "arduino-header-r3";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map = <ARDUINO_HEADER_R3_A0 0 &gpio_a 0 0>,
			   <ARDUINO_HEADER_R3_A1 0 &gpio_a 1 0>,
			   <ARDUINO_HEADER_R3_A2 0 &gpio_a 5 0>,
			   <ARDUINO_HEADER_R3_A3 0 &gpio_d 1 0>,
			   <ARDUINO_HEADER_R3_A4 0 &gpio_c 1 0>,
			   <ARDUINO_HEADER_R3_A5 0 &gpio_c 0 0>,
			   <ARDUINO_HEADER_R3_D0 0 &gpio_c 2 0>,
			   <ARDUINO_HEADER_R3_D1 0 &gpio_c 3 0>,
			   <ARDUINO_HEADER_R3_D2 0 &gpio_a 20 0>,
			   <ARDUINO_HEADER_R3_D3 0 &gpio_a 19 0>,
			   <ARDUINO_HEADER_R3_D4 0 &gpio_c 6 0>,
			   <ARDUINO_HEADER_R3_D5 0 &gpio_a 2 0>,
			   <ARDUINO_HEADER_R3_D6 0 &gpio_d 2 0>,
			   <ARDUINO_HEADER_R3_D7 0 &gpio_d 3 0>,
			   <ARDUINO_HEADER_R3_D8 0 &gpio_a 21 0>,
			   <ARDUINO_HEADER_R3_D9 0 &gpio_a 18 0>,
			   <ARDUINO_HEADER_R3_D10 0 &gpio_b 0 0>,
			   <ARDUINO_HEADER_R3_D11 0 &gpio_b 1 0>,
			   <ARDUINO_HEADER_R3_D12 0 &gpio_b 3 0>,
			   <ARDUINO_HEADER_R3_D13 0 &gpio_b 2 0>,
			   <ARDUINO_HEADER_R3_D14 0 &gpio_b 4 0>,
			   <ARDUINO_HEADER_R3_D15 0 &gpio_b 5 0>;
	};
};

gpioa: &gpio_a {
	status = "okay";
};

gpiob: &gpio_b {
	status = "okay";
};

gpioc: &gpio_c {
	status = "okay";
};

gpiod: &gpio_d {
	status = "okay";
};

porta: &port_a {};

portb: &port_b {};

portc: &port_c {};

portd: &port_d {};

lpuart0: &lpuart_0 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&pinmux_lpuart0>;
	pinctrl-names = "default";
};

lpuart1: &lpuart_1 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&pinmux_lpuart1>;
	pinctrl-names = "default";
};

&flash {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@800000 {
			reg = <0x800000 DT_SIZE_K(1160)>;
		};

		storage_partition: partition@922000 {
			reg = <0x922000 DT_SIZE_K(16)>;
		};

		hw_params_partition: partition@926000 {
			label = "hw-parameters";
			reg = <0x926000 DT_SIZE_K(8)>;
		};
	};
};

fmu: &fmu_0 {
	status = "okay";
};

tpm0: &tpm_0 {
	status = "okay";
	pinctrl-0 = <&pinmux_tpm0>;
	pinctrl-names = "default";
};

lptmr0: &lptmr_0 {
	status = "okay";
};

lpspi1: &lpspi_1 {
	status = "okay";
	pinctrl-0 = <&pinmux_lpspi1>;
	pinctrl-names = "default";

	mx25r6435fm2il0: flash@0 {
		compatible = "jedec,spi-nor";
		jedec-id = [c2 28 17];
		reg = <0>;
		/* only wp-gpio on default board configuration,
		 * there is a reset gpio line but the line is
		 * DNP by default on the board (R4 on schematic)
		 */
		wp-gpios = <&gpio_b 5 GPIO_ACTIVE_LOW>;
		size = <DT_SIZE_M(64)>;
		has-dpd;
		dpd-wakeup-sequence = <30000 20 35000>;
		t-enter-dpd = <10000>;
		/* this is the default (reset) mode for this flash */
		mxicy,mx25r-power-mode = "low-power";
		/* 8 MHz for low power mode */
		spi-max-frequency = <DT_FREQ_M(8)>;
		spi-cs-setup-delay-ns = <5>;
		spi-cs-hold-delay-ns = <5>;
		spi-interframe-delay-ns = <125>;
	};
};

flexcan0: &flexcan_0 {
	status = "okay";
	pinctrl-0 = <&pinmux_flexcan>;
	pinctrl-names = "default";

	can-transceiver {
		max-bitrate = <5000000>;
	};
};

adc0: &adc_0 {
	pinctrl-0 = <&pinmux_lpadc0>;
	pinctrl-names = "default";
	status = "okay";
};

lpi2c1: &lpi2c_1 {
	status = "okay";
	pinctrl-0 = <&pinmux_lpi2c1>;
	pinctrl-names = "default";

	accelerometer: accelerometer@19 {
		status = "okay";
		compatible = "nxp,fxls8974";
		reg = <0x19>;
	};
};

&edma {
	status = "okay";
};

&nbu {
	status = "okay";
	wakeup-source;
};
