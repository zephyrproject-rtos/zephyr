/dts-v1/;

#include <nxp/nxp_mcxw70.dtsi>
#include "frdm_mcxw70-pinctrl.dtsi"
#include <zephyr/dt-bindings/gpio/arduino-header-r3.h>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "NXP FRDM-MCXW70 board";

	aliases {
		led0 = &blue_led;
		blue-pwm-led = &blue_pwm_led;
		green-pwm-led = &green_pwm_led;
		red-pwm-led = &red_pwm_led;
		sw0 = &user_button_0;
	};

	chosen {
		zephyr,flash = &flw;
		zephyr,flash-controller = &fmu;
		zephyr,code-partition = &code_partition;
		zephyr,sram = &stcm0;
		zephyr,console = &lpuart1;
		zephyr,shell-uart = &lpuart1;
		zephyr,uart-pipe = &lpuart0;
		zephyr,bt-c2h-uart = &lpuart0;
	};

	user_led {
		compatible = "gpio-leds";

		red_led: red_led {
			gpios = <&gpio_d 2 GPIO_ACTIVE_HIGH>;
		};

		green_led: green_led {
			gpios = <&gpio_d 3 GPIO_ACTIVE_HIGH>;
		};

		blue_led: blue_led {
			gpios = <&gpio_c 7 GPIO_ACTIVE_HIGH>;
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		red_pwm_led: pwm_led_2 {
			pwms = <&tpm_2 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		green_pwm_led: pwm_led_1 {
			pwms = <&tpm_2 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};

		blue_pwm_led: pwm_led_0 {
			pwms = <&tpm_0 2 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
		};
	};

	gpio_keys {
		compatible = "gpio-keys";

		user_button_0: button_0 {
			label = "User SW4";
			gpios = <&gpio_a 0 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
			zephyr,code = <INPUT_KEY_0>;
			status = "okay";
		};
	};
};

gpioa: &gpio_a {
	status = "okay";
};

gpiob: &gpio_b {
	status = "okay";
};

gpioc: &gpio_c {
	status = "okay";
};

gpiod: &gpio_d {
	status = "okay";
};

porta: &port_a {};

portb: &port_b {};

portc: &port_c {};

portd: &port_d {};

lpuart0: &lpuart_0 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&pinmux_lpuart0>;
	pinctrl-names = "default";
};

lpuart1: &lpuart_1 {
	current-speed = <115200>;
	status = "okay";
	pinctrl-0 = <&pinmux_lpuart1>;
	pinctrl-names = "default";
};

&flash {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		storage_partition: partition@17a000 {
			label = "storage";
			reg = <0x17a000 DT_SIZE_K(16)>;
		};

		hw_params_partition: partition@17e000 {
			label = "hw-parameters";
			reg = <0x17e000 DT_SIZE_K(8)>;
		};
	};
};

&flw {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		code_partition: partition@0 {
			label = "code";
			reg = <0x0 DT_SIZE_K(1160)>;
		};
	};
};

fmu: &fmu_0 {
	status = "okay";
};

tpm0: &tpm_0 {
	status = "okay";
	pinctrl-0 = <&pinmux_tpm0>;
	pinctrl-names = "default";
};

tpm2: &tpm_2 {
	status = "okay";
	pinctrl-0 = <&pinmux_tpm2>;
	pinctrl-names = "default";
};

lptmr0: &lptmr_0 {
	status = "okay";
};
