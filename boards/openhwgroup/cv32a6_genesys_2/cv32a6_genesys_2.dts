/dts-v1/;

#include <openhwgroup/cv32a6.dtsi>

/ {
	model = "Openhardwaregroup CV32A6 on Genesys 2";
	compatible = "openhwgroup,cv32a6_genesys_2";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &memory0;
	};
};

&uart0 {
	status = "okay";
};

&spi0 {
	status = "okay";
};

&clint {
	status = "okay";
};

&eth {
	local-mac-address = [00 18 3e 02 e3 7f];
	status = "okay";
};

&xlnx_gpio {
	status = "okay";
};
