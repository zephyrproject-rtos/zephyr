/dts-v1/;

#include <chipyard/chipyard-riscv64.dtsi>

/ {
	chosen {
		zephyr,console= &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,sram = &ram0;
		zephyr,flash = &flash0;
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;  // Set appropriate baud rate
};

&htif {
	status = "disabled";
};


