/dts-v1/;

#include <espressif/esp32s3/esp32s3_wroom_n16.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <espressif/partitions_0x0_amp_16M.dtsi>
#include "esp32s3_box3-pinctrl.dtsi"

/ {
	model = "Espressif ESP32S3-BOX-3 PROCPU";
	compatible = "espressif,esp32s3";

	aliases {
		watchdog0 = &wdt0;
		sw0 = &button0;
	};

	chosen {
		zephyr,sram = &sram1;
		zephyr,console = &usb_serial;
		zephyr,shell-uart = &usb_serial;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,display = &esp32_lcd;
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpio0 0 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BOOT Button";
			zephyr,code = <INPUT_KEY_0>;
		};
	};

	leds {
		compatible = "gpio-leds";

		lcd_backlight: lcd_backlight {
			gpios = <&gpio1 15 GPIO_ACTIVE_HIGH>; /* GPIO47 */
			label = "LCD Backlight";
		};
	};
};

&usb_serial {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&spi2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim2_default>;
	pinctrl-names = "default";
	
	esp32_lcd: esp32_lcd@0 {
		compatible = "espressif,esp32-lcd";
		reg = <0>;
		spi-max-frequency = <20000000>; /* 20 MHz */
		width = <320>;
		height = <240>;
		pixel-format = <0>; 
		rotation = <0>;
		dc-gpios = <&gpio0 4 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio1 16 GPIO_ACTIVE_LOW>; 
		status = "okay";
	};
};

&wdt0 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&dma {
	status = "okay";
};
