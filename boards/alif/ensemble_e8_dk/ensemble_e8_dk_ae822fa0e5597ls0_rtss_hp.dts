/dts-v1/;

#include <alif/ensemble/ae822fa0e5597ls0.dtsi>
#include <alif/ensemble/common/ensemble_rtss_hp.dtsi>
#include "ensemble_e8_dk-pinctrl.dtsi"

/ {
	compatible = "alif,ensemble-e8-dk-ae822fa0e5597ls0-rtss-hp";
	#address-cells = <1>;
	#size-cells = <1>;

	chosen {
		zephyr,flash = &mram;
		zephyr,sram = &dtcm;
		zephyr,console = &uart4;
		zephyr,shell-uart = &uart4;
		zephyr,code-partition = &slot0_partition;
	};
};

&mram {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		slot0_partition: partition@0 {
			label = "image-0";
			reg = <0x0 DT_SIZE_K(5632)>;
		};
	};
};

&uart4 {
	status = "okay";
	pinctrl-0 = <&pinctrl_uart4>;
	pinctrl-names = "default";
};
