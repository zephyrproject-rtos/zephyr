/dts-v1/;
#include <ambiq/ambiq_apollo510b.dtsi>
#include "apollo510b_evb-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "Ambiq Apollo510 Blue evaluation board";
	compatible = "ambiq,apollo510b_evb";

	chosen {
		zephyr,itcm = &itcm;
		zephyr,dtcm = &dtcm;
		zephyr,sram = &sram0;
		zephyr,flash-controller = &flash;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,console = &uart1;
		zephyr,uart-mcumgr = &uart1;
		zephyr,shell-uart = &uart1;
		zephyr,uart-pipe = &uart1;
		zephyr,entropy = &trng;
		ambiq,xo32m = &xo32m_xtal;
		ambiq,xo32k = &xo32k_xtal;
		ambiq,extrefclk = &extrefclk;
		zephyr,bt-hci = &bt_hci;
		ambiq,psram = &aps51216ba;
		ambiq,external-ram-region = &xip0;
	};

	aliases {
		watchdog0 = &wdt0;
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		sw0 = &button0;
		sw1 = &button1;
		pwm-led0 = &pwm_led0;
		sdhc0 = &sdio0;
	};

	sram0: memory@SSRAM_BASE_NAME {
		compatible = "mmio-sram";
		reg = <SSRAM_BASE_ADDR 0x180000>;
	};

	sram_no_cache: memory@20200000 {
		compatible = "zephyr,memory-region", "mmio-sram";
		reg = <0x20200000 0x180000>;
		zephyr,memory-region = "SRAM_NO_CACHE";
		zephyr,memory-attr = <DT_MEM_ARM(ATTR_MPU_RAM_NOCACHE)>;
	};

	leds {
		compatible = "gpio-leds";

		led0: led_0 {
			gpios = <&gpio0_31 11 GPIO_ACTIVE_LOW>;
			label = "LED 0";
		};

		led1: led_1 {
			gpios = <&gpio0_31 19 GPIO_ACTIVE_LOW>;
			label = "LED 1";
		};

		led2: led_2 {
			gpios = <&gpio64_95 19 GPIO_ACTIVE_LOW>;
			label = "LED 2";
		};
	};

	buttons {
		compatible = "gpio-keys";
		polling-mode;

		button0: button_0 {
			gpios = <&gpio32_63 14 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BTN0";
			zephyr,code = <INPUT_KEY_0>;
			status = "okay";
		};

		button1: button_1 {
			gpios = <&gpio0_31 29 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "BTN1";
			zephyr,code = <INPUT_KEY_1>;
			status = "okay";
		};
	};

	pwmleds: pwmleds {
		compatible = "pwm-leds";
		status = "disabled";

		pwm_led0: pwm_led_0 {
			pwms = <&pwm2 0 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
			label = "PWM_LED";
		};
	};
};

&pdm0 {
	pinctrl-0 = <&pdm0_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&audadc0 {
	status = "okay";
};

&i2s0 {
	pinctrl-0 = <&i2s0_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&i2s1 {
	pinctrl-0 = <&i2s1_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&adc0 {
	pinctrl-0 = <&adc0_default>;
	pinctrl-names = "default";
	status = "disabled";
};

&trng {
	status = "okay";
};

&xo32m_xtal {
	clock-frequency = <DT_FREQ_M(48)>;
};

&itm {
	pinctrl-0 = <&swo_default>;
	pinctrl-names = "default";
};

&uart1 {
	current-speed = <115200>;
	pinctrl-0 = <&uart1_default>;
	pinctrl-1 = <&uart1_sleep>;
	pinctrl-names = "default", "sleep";
	status = "okay";
};

&stimer0 {
	clk-source = <3>;
};

&timer0 {
	counter0: counter {
		status = "disabled";
	};
};

&timer2 {
	pwm2: pwm {
		pinctrl-0 = <&pwm2_default>;
		pinctrl-names = "default";
		status = "disabled";
	};
};

&rtc0 {
	status = "disabled";
	clock = "XTAL";
};

&wdt0 {
	status = "okay";
};

&iom6 {
	spi6: spi {
		pinctrl-0 = <&spi6_default>;
		pinctrl-names = "default";
		clock-frequency = <DT_FREQ_M(8)>;
		cs-gpios = <&gpio128_159 21 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		status = "okay";

		bt_hci: bt-hci@0 {
			compatible = "ambiq,bt-hci-spi";
			reg = <0>;
			spi-max-frequency = <DT_FREQ_M(8)>;
			irq-gpios = <&gpio96_127 21 GPIO_ACTIVE_HIGH>;
			reset-gpios = <&gpio64_95 29 GPIO_ACTIVE_LOW>;
			clkreq-gpios = <&gpio128_159 10 GPIO_ACTIVE_HIGH>;
			cm-gpios = <&gpio0_31 15 GPIO_ACTIVE_HIGH>;
			status = "okay";
		};
	};
};

&mspi0 {
	pinctrl-0 = <&mspi0_default>;
	pinctrl-1 = <&mspi0_sleep>;
	pinctrl-2 = <&mspi0_psram>;
	pinctrl-names = "default", "sleep", "psram";
	status = "okay";
	zephyr,pm-device-runtime-auto;

	ce-gpios = <&gpio192_223 7 GPIO_ACTIVE_LOW>;

	cmdq-buffer-location = "SRAM_NO_CACHE";
	cmdq-buffer-size = <256>;

	ambiq,apmemory;

	dqs-support;

	aps51216ba: aps_z8@0 {
		compatible = "ambiq,mspi-device", "mspi-aps-z8";
		size = <DT_SIZE_M(512)>;
		reg = <0>;
		status = "okay";
		mspi-max-frequency = <125000000>;
		mspi-io-mode = "MSPI_IO_MODE_HEX_8_8_16";
		mspi-data-rate = "MSPI_DATA_RATE_S_D_D";
		mspi-hardware-ce-num = <0>;
		mspi-dqs-enable;
		read-command = <0x20>;
		write-command = <0xA0>;
		command-length = "INSTR_1_BYTE";
		address-length = "ADDR_4_BYTE";
		rx-dummy = <7>;
		tx-dummy = <8>;
		xip-config = <1 0 DT_SIZE_M(64) 0>;
		ce-break-config = <1024 4>;
		ambiq,timing-config-mask = <0x62>;
		ambiq,timing-config = <8 7 1 0 0 3 10>;
		zephyr,pm-device-runtime-auto;
	};
};

&sdio0 {
	pinctrl-0 = <&sdio0_default>;
	pinctrl-names = "default";
	txdelay = <0>;
	rxdelay = <0>;
	status = "okay";

	mmc {
		compatible = "zephyr,mmc-disk";
		disk-name = "SD2";
		status = "okay";
	};
};

&sdio1 {
	pinctrl-0 = <&sdio1_default>;
	pinctrl-names = "default";
	txdelay = <9>;
	rxdelay = <11>;
	status = "okay";
};

zephyr_udc0: &usb {
	vddusb33-gpios = <&gpio32_63 15 GPIO_PULL_UP>;
	vddusb0p9-gpios = <&gpio32_63 16 GPIO_PULL_UP>;
	status = "okay";
};

&flash0 {
	// By default, the flash write block size is 16 bytes, But if the cache is enabled,
	// the write block size needs to be 32 bytes to match the cache line size.
	write-block-size = <32>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(256)>;
		};

		slot0_partition: partition@40000 {
			label = "image-0";
			reg = <0x40000 DT_SIZE_K(1024)>;
		};

		slot1_partition: partition@140000 {
			label = "image-1";
			reg = <0x140000 DT_SIZE_K(1024)>;
		};

		scratch_partition: partition@240000 {
			label = "image-scratch";
			reg = <0x240000 DT_SIZE_K(32)>;
		};

		storage_partition: partition@248000 {
			label = "storage";
			reg = <0x248000 DT_SIZE_K(32)>;
		};
	};
};

&gpio0_31 {
	status = "okay";
};

&gpio32_63 {
	status = "okay";
};

&gpio64_95 {
	status = "okay";
};

&gpio96_127 {
	status = "okay";
};

&gpio128_159 {
	status = "okay";
};

&gpio160_191 {
	status = "okay";
};

&gpio192_223 {
	status = "okay";
};
