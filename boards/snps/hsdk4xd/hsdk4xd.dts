/dts-v1/;

#include <synopsys/arc_hs4xd.dtsi>

/ {
	compatible = "snps,hsdk4xd";
	model = "hsdk4xd";

	aliases {
		uart-dbg = &uart_dbg;
	};

	chosen {
		zephyr,sram = &ddr0;
		zephyr,console = &uart_dbg;
		zephyr,shell-uart = &uart_dbg;
	};
};

arduino_spi: &spi2 {};

&uart_dbg {
	current-speed = <115200>;
	status = "okay";
};

&creg_gpio {
	status = "okay";
};
