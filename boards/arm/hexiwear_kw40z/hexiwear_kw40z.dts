/dts-v1/;

#include <nxp/nxp_kw40z.dtsi>

/ {
	model = "Hexiwear KW40 board";
	compatible = "nxp,kw40z", "nxp,mkw40z4";

	aliases {
		adc-0 = &adc0;
		lpuart-0 = &lpuart0;
		pinmux-a = &pinmux_a;
		pinmux-b = &pinmux_b;
		pinmux-c = &pinmux_c;
		gpio-a = &gpioa;
		gpio-b = &gpiob;
		gpio-c = &gpioc;
		i2c-0 = &i2c0;
		i2c-1 = &i2c1;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};
};

&adc0 {
	status = "ok";
};

&i2c1 {
	status = "ok";
};

&lpuart0 {
	status = "ok";
	current-speed = <115200>;
};
