/dts-v1/;

#include <nxp/nxp_rt.dtsi>

/ {
	model = "NXP MIMXRT1064-EVK board";
	compatible = "nxp,mimxrt1064";

	aliases {
		gpio-1= &gpio1;
		gpio-2= &gpio2;
		gpio-3= &gpio3;
		gpio-4= &gpio4;
		gpio-5= &gpio5;
		uart-1 = &uart1;
		led0 = &green_led;
		sw0 = &user_button;
		eth = &eth;
	};

	chosen {
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
	};

	sdram0: memory@80000000 {
		/* Micron MT48LC16M16A2B4-6AIT:G */
		device_type = "memory";
		compatible = "mmio-sram";
		reg = <0x80000000 0x2000000>;
	};

	leds {
		compatible = "gpio-leds";
		green_led: led-1 {
			gpios = <&gpio1 9 GPIO_INT_ACTIVE_LOW>;
			label = "User LD1";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button-1 {
			label = "User SW8";
			gpios = <&gpio5 0 GPIO_INT_ACTIVE_LOW>;
		};
	};
};

&flexspi1 {
	reg = <0x402a4000 0x4000>, <0x70000000 0x400000>;
	/* WINBOND */
	w25q32jvwj0: w25q32jvwj@0 {
		compatible = "winbond,w25q32jvwj", "jedec,spi-nor";
		reg = <0>;
		status = "ok";
	};
};

&uart1 {
	status = "ok";
	current-speed = <115200>;
};

&eth {
	status = "ok";
	ptp {
		status = "ok";
	};
};
