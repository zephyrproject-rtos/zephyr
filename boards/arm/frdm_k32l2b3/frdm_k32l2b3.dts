/dts-v1/;

#include <nxp/nxp_k32l2b.dtsi>

/ {
	model = "NXP Freedom K32L2B3 board";
	compatible = "nxp,frdm-k32l2b3", "nxp,k32l2b";

	aliases {
		uart-0 = &lpuart0;
		i2c-0 = &i2c0;
		gpio-a = &gpioa;
		gpio-b = &gpiob;
		gpio-c = &gpioc;
		gpio-d = &gpiod;
		gpio-e = &gpioe;
		led0 = &red_led;
		led1 = &green_led;
		sw0 = &user_button_0;
	};

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &lpuart0;
		zephyr,shell-uart = &lpuart0;
	};

	leds {
		compatible = "gpio-leds";
		red_led: led_0 {
			gpios = <&gpioe 31 0>;
			label = "User LD1";
		};
		green_led: led_1 {
			gpios = <&gpiod 5 0>;
			label = "User LD2";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button_0: button_0 {
			label = "User SW1";
			gpios = <&gpioa 4 (GPIO_INT_ACTIVE_LOW
						| GPIO_PUD_PULL_UP)>;
		};
	};

	arduino_header: connector {
		compatible = "arduino-header-r3";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map = <0 0 &gpiob 0 0>,	/* A0 */
				<1 0 &gpiob 1 0>,	/* A1 */
				<2 0 &gpiob 2 0>,	/* A2 */
				<3 0 &gpiob 3 0>,	/* A3 */
				<4 0 &gpioc 2 0>,	/* A4 */
				<5 0 &gpioc 1 0>,	/* A5 */
				<6 0 &gpioa 1 0>,	/* D0 */
				<7 0 &gpioa 2 0>,	/* D1 */
				<8 0 &gpiod 3 0>,	/* D2 */
				<9 0 &gpioa 12 0>,	/* D3 */
				<10 0 &gpioa 4 0>,	/* D4 */
				<11 0 &gpioa 5 0>,	/* D5 */
				<12 0 &gpioe 29 0>,	/* D6 */
				<13 0 &gpioe 30 0>,	/* D7 */
				<14 0 &gpioa 13 0>,	/* D8 */
				<15 0 &gpiod 2 0>,	/* D9 */
				<16 0 &gpiod 4 0>,	/* D10 */
				<17 0 &gpiod 6 0>,	/* D11 */
				<18 0 &gpiod 7 0>,	/* D12 */
				<19 0 &gpiod 5 0>,	/* D13 */
				<20 0 &gpioe 0 0>,	/* D14 */
				<21 0 &gpioe 1 0>;	/* D15 */
	};
};

&cpu0 {
	clock-frequency = <48000000>;
};

&i2c0 {
	status = "okay";
	mma8451q@1d {
		compatible = "nxp,fxos8700","nxp,mma8451q";
		reg = <0x1d>;
		label = "MMA8451Q";
		int1-gpios = <&gpiod 1 0>;
	};
};

&lpuart0 {
	status = "okay";
	current-speed = <115200>;
};

&usbd {
	compatible = "nxp,kinetis-usbd";
	status = "okay";
	num-bidir-endpoints = <8>;
};
