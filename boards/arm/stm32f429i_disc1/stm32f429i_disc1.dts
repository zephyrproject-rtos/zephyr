/dts-v1/;
#include <st/f4/stm32f429Xi.dtsi>

/ {
	model = "STMicroelectronics STM32F429I_DISC1 board";
	compatible = "st,stm32f4discovery", "st,stm32f429";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,ccm = &ccm0;
	};

	leds {
		compatible = "gpio-leds";
		orange_led_3: led_3 {
			gpios = <&gpiog 13 GPIO_ACTIVE_HIGH>;
			label = "User LD3";
		};
		green_led_4: led_4 {
			gpios = <&gpiog 14 GPIO_ACTIVE_HIGH>;
			label = "User LD4";
		};
	};

	gpio_keys {
		compatible = "gpio-keys";
		user_button: button {
			label = "User";
			gpios = <&gpioa 0 GPIO_ACTIVE_LOW>;
		};
	};

	aliases {
		led0 = &green_led_4;
		sw0 = &user_button;
	};
};

&usart1 {
	current-speed = <115200>;
	status = "okay";
};

&usart2 {
	current-speed = <115200>;
	status = "okay";
};

&rtc {
	status = "okay";
};

&i2c3 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;
};

&spi5 {
	status = "okay";
	cs-gpios = <&gpioc 2 0>;
	display0@0 {
		compatible = "ilitek,ili9xxx";
		label = "DISPLAY";
		spi-max-frequency = <15151515>;
		reg = <0>;
		cmd-data-gpios = <&gpiod 13 GPIO_ACTIVE_LOW>;
		pixel-format = "RGB_565";
		height = <320>;
		width = <240>;

		power-ctrl-a = [39 2C 00 34 02];
		power-ctrl-b = [00 8B 30];
		power-on-seq-ctrl = [67 03 12 81];
		drvr-timing-ctrl-a-i = [85 20 7A];
		drvr-timing-ctrl-b = [00 00];
		pump-ratio-ctrl = [20];
		power-ctrl-1 = [1B];
		power-ctrl-2 = [10];
		vcom-ctrl-1 = [3F 3C];
		vcom-ctrl-2 = [B7];
		mem-access-ctrl = [B8];
		frame-ctrl-normal-mode = [00 1B];
		display-function-ctrl = [0A A2];
		enable-3g = [00];
		gamma-set = [01];
		positive-gamma-correction =
		    [0F 2A 28 08 0E 08 54 A9 43 0A 0F 00 00 00 00];
		negative-gamma-correction =
		    [00 15 17 07 11 06 2B 56 3C 05 10 0F 3F 3F 0F];
	};
};
