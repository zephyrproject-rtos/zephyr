CONFIG_RUNTIME_NMI=y
CONFIG_CLOCK_CONTROL=y

# 24MHz system clock
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=24000000

# Enable MPU
CONFIG_ARM_MPU=y

# GPIOs
CONFIG_GPIO=y

# Serial
CONFIG_CONSOLE=y
CONFIG_SERIAL=y
CONFIG_UART_CONSOLE=y
