/dts-v1/;

#include "m5stack_cores3_procpu_common.dtsi"

/ {
	model = "M5Stack CoreS3 PROCPU";
	compatible = "m5stack,cores3";

	aliases {
		accel0 = &bmi270;
		magn0 = &bmm150;
	};

	chosen {
		zephyr,camera = &lcd_cam;
	};
};

&i2c0 {
	bmi270: bmi270@69 {
		compatible = "bosch,bmi270";
		reg = <0x69>;
	};

	bmm150: bmm150@10 {
		compatible = "bosch,bmm150";
		status = "okay";
		reg = <0x10>;
	};

	gc0308: gc0308@21 {
		compatible = "galaxycore,gc0308";
		reg = <0x21>;
		status = "okay";
		reset-gpios = <&aw9523b_gpio 8 GPIO_ACTIVE_LOW>;

		port {
			gc0308_ep_out: endpoint {
				remote-endpoint-label = "dvp_ep_in";
			};
		};
	};
};

&dma {
	status = "okay";
};

&i2c1 {
	/* GPIO2 is used for CAM_CLK (XCLK). */
	status = "disabled";
};

&lcd_cam {
	status = "okay";
	cam-clk = <20000000>;
	data-width = <8>;
	pinctrl-0 = <&lcd_cam_default>;
	pinctrl-names = "default";
	source = <&gc0308>;
	dmas = <&dma 2>;
	dma-names = "rx";

	port {
		dvp_ep_in: endpoint {
			remote-endpoint-label = "gc0308_ep_out";
		};
	};
};

&regulator {
	vddcam_3v3: ALDO3 {
		regulator-min-microvolt = <3000000>;
		/* regulator-init-microvolt = <3300000>; */
		regulator-max-microvolt = <3500000>;
		regulator-boot-on;
		status = "okay";
	};

	avdd: BLDO1 {
		regulator-min-microvolt = <2700000>;
		/* regulator-init-microvolt = <2800000>; */
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
		status = "okay";
	};
};

&dvdd {
	regulator-boot-on;
};
