/dts-v1/;

#include <cortex_r8_virt.dtsi>

/ {
	model = "Cortex-R8 Virtual target";
	compatible = "renode,cortex-r8-virtual";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
	};
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	clock-frequency = <99999901>;
};
