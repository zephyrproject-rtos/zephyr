&zephyr_i2c {
	status = "okay";

	adafruit_drv2605: drv2605@5a {
		compatible = "ti,drv2605";
		reg = <0x5a>;
		actuator-mode = "ERM";
		status = "okay";
	};
};

/* Alternate node label for samples/drivers/haptics/drv2605 */
haptic: &adafruit_drv2605 {};
