&arduino_spi {
	status = "okay";

	/* D10 */
	cs-gpios = <&arduino_header 16
		    (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;

	ft800@0 {
		compatible = "ftdi,ft800";
		reg = <0x0>;
		spi-max-frequency = <8000000>;
		/*  D2 */
		irq-gpios = <&arduino_header 8 GPIO_ACTIVE_LOW>;

		pclk = <5>;
		pclk_pol = <1>;
		cspread = <1>;
		swizzle = <0>;
		vsize = <272>;
		voffset = <12>;
		vcycle = <292>;
		vsync0 = <0>;
		vsync1 = <10>;
		hsize = <480>;
		hoffset = <43>;
		hcycle = <548>;
		hsync0 = <0>;
		hsync1 = <41>;

		status = "okay";
	};
};
