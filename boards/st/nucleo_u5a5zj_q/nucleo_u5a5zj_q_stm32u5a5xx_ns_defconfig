# enable uart driver
CONFIG_SERIAL=y

# enable GPIO
CONFIG_GPIO=y

# console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable MPU
CONFIG_ARM_MPU=y

# Enable HW stack protection
CONFIG_HW_STACK_PROTECTION=y

# TF-M
CONFIG_ARM_TRUSTZONE_M=y
CONFIG_RUNTIME_NMI=y
CONFIG_TRUSTED_EXECUTION_NONSECURE=y

# Keys/Certificates
#
#	For development purposes only. These must be changed for a real product.
#
# The otp_provision.c will be picked from the same rsa-3072-private-s.pem folder.
#
CONFIG_TFM_MCUBOOT_SIGNATURE_TYPE="RSA-3072"
CONFIG_TFM_KEY_FILE_S="${BOARD_DIR}/tfm/certs/rsa-3072-private-s.pem"
CONFIG_TFM_KEY_FILE_NS="${BOARD_DIR}/tfm/certs/rsa-3072-private-ns.pem"
