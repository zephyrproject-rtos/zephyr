/dts-v1/;
#include <arm/atmosic/ATM34xx_ns.dtsi>
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "Atmosic EVK 3425-PQK-2";
	compatible = "atmosic,ATMEVK-3425-PQK-2";

	chosen {
		zephyr,console = &uart1;
		zephyr,shell-uart = &uart1;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart1;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash-controller = &rram_controller;
		zephyr,flash = &rram0;
		zephyr,code-partition = &nspe_partition;
		zephyr,entropy = &trng;
		zephyr,ieee802154 = &ieee802154;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 7 GPIO_ACTIVE_HIGH>;
			label = "Red LED1";
		};
		led1: led_1 {
			gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
			label = "Yellow LED2";
		};
		led2: led_2 {
			gpios = <&gpio1 9 GPIO_ACTIVE_HIGH>;
			label = "Blue LED3";
		};
	};

        pwmleds {
                compatible = "pwm-leds";
                pwm_led0: pwm_led_0 {
                        pwms = <&pwm7 7 PWM_MSEC(1) PWM_POLARITY_NORMAL>;
			label = "Red LED1";
                };
        };

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>;
			label = "Button1";
		};
		button1: button_1 {
			gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
			label = "Button2";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		i2c-1 = &i2c0;
		led0 = &led0;
		pwm-0 = &pwm7;
		pwm-led0 = &pwm_led0;
		sw0 = &button0;
	};
};

&flash_controller {
	clk-pin = <18>;
	csn-pin = <19>;
	d0-pin = <20>;
	d1-pin = <21>;
	d2-pin = <22>;
	d3-pin = <17>;
};

&i2c0 {
        sda-pin = <29>;
        scl-pin = <4>;
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&pwm7 {
	pin = <7>;
	status = "okay";
};

&spi1 {
	clk-pin = <5>;
	cs-pin = <4>;
	mosi-pin = <6>;
	miso-pin = <7>;
};

&adc {
	ch-cell = <1>;
	ch-batt = <11>;
};

&uart1 {
	tx-pin = <27>;
};

&uart0 {
	rx-pin = <30>;
	tx-pin = <15>;
	rts-pin = <13>;
	cts-pin = <12>;
};

arduino_i2c: &i2c0 {};
arduino_spi: &spi1 {};
