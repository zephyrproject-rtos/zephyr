# Enable MPU
CONFIG_ARM_MPU=y

# Enable UART driver
CONFIG_SERIAL=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable USB (for CDC ACM console)
CONFIG_USB_DEVICE_STACK=y

# Additional board options
CONFIG_GPIO=y

# Required to enable 3V3 power rail and Vin1 monitor
CONFIG_REGULATOR=y
