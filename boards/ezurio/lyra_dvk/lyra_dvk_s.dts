/dts-v1/;
#include <silabs/xg22/bgm220sc22hna.dtsi>
#include "lyra_dvk.dtsi"

/ {
	model = "Ezurio Lyra S DVK";
	compatible = "ezurio,lyra_dvk_s", "silabs,efr32bg22";

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpioa 6 GPIO_ACTIVE_LOW>;
			zephyr,code = <INPUT_KEY_0>;
		};
	};
};
