CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=12000000

CONFIG_BUILD_OUTPUT_HEX=y

# enable uart driver
CONFIG_SERIAL=y

# enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# enable GPIO
CONFIG_GPIO=y

# enable pin controller
CONFIG_PINCTRL=y

# enable Clocks
CONFIG_CLOCK_CONTROL=y
