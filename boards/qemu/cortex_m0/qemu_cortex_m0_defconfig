CONFIG_QEMU_ICOUNT_SHIFT=6

# Enable GPIO
CONFIG_GPIO=y

# Clock control
CONFIG_CLOCK_CONTROL_NRF_K32SRC_XTAL=y

# Enable UART driver
CONFIG_SERIAL=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# icount is kinda broken when the NRF timer emulation is used
CONFIG_QEMU_ICOUNT=n
