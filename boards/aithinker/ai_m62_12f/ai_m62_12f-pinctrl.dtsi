#include <dt-bindings/pinctrl/bl616x-pinctrl.h>

&pinctrl {
	uart0_default: uart0_default {
		group1 {
			pinmux = <GPIO22_UART0_RX>,
				 <GPIO21_UART0_TX>;
			bias-pull-up;
			input-schmitt-enable;
		};
	};

	uart0_sleep: uart0_sleep {
		group1 {
			pinmux = <GPIO22_UART0_RX>,
				 <GPIO21_UART0_TX>;
			bias-high-impedance;
		};
	};

	spi0_default: spi0_default {
		group1 {
			pinmux = <GPIO27_SPI_MOSI>,
				 <GPIO29_SPI_SCLK>,
				 <GPIO30_SPI_MISO>;
			bias-pull-up;
			input-schmitt-enable;
		};
	};
};
