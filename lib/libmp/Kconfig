# Kconfig file for libMP

module = LIBMP
module-str = libmp
source "subsys/logging/Kconfig.template.log_config"

config MP
	bool "Media Pipe core support"

if MP

config MP_THREADS_NUM
	int "Maximum number of threads could be used"
	range 0 255
	default 3

config MP_THREAD_STACK_SIZE
	int "Stack size of a thread"
	default 1024

config MP_THREAD_DEFAULT_PRIORITY
	int "Priority of a thread"
	default 5

config MP_CAPSFILTER
	bool "Capsfilter support"

menu "Media Pipe plugins"

config MP_PLUGIN_ZVID
	bool "Zvid plugin support"

config MP_PLUGIN_ZDISP
	bool "Zdisp plugin support"

source "lib/libmp/src/plugins/zaud/Kconfig"

endmenu

endif # MP
