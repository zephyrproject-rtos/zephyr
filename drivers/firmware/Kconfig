menuconfig FIRMWARE
	bool "Drivers used to interact with firmware."
	help
		Enable support for firmware drivers.

if FIRMWARE

config FIRMWARE_INIT_PRIORITY
	int "Init priority"
	default 20 if FIRMWARE_IMX_SCU
	default 60
	help
		Device driver initialization priority.

source "drivers/firmware/imx/Kconfig.imx"

endif # FIRMWARE
