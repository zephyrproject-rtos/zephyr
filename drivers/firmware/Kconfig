menu "Firmware drivers"

config ARM_SCMI
	bool "Support for ARM's SCMI"
	depends on ARM || ARM64
	help
	  Enable support for ARM's System Configuration and Management
	  Interface (SCMI).

config QEMU_FWCFG
	bool "Support for QEMU's fwcfg"
	help
	  Enable support for QEMU's firmware configuration device.

# zephyr-keep-sorted-start
source "drivers/firmware/scmi/Kconfig"
source "drivers/firmware/tisci/Kconfig"
# zephyr-keep-sorted-stop

endmenu
