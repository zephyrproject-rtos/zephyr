config CLOCK_CONTROL_SF32LB58
    bool "SF32LB58 clock control drivers"
    default y
    depends on DT_HAS_SIFLI_SF32LB58_XT_CLK_ENABLED || \
    DT_HAS_SIFLI_SF32LB58_RC_CLK_ENABLED

config CLOCK_CONTROL_SF32LB58_HPSYS
    bool "SF32LB58 clock control drivers in HPSYS"
    default y
    depends on DT_HAS_SIFLI_SF32LB58_HPSYS_RCC_ENABLED || \
    DT_HAS_SIFLI_SF32LB58_HPSYS_AON_ENABLED || \
    DT_HAS_SIFLI_SF32LB58_PERI_HPSYS_CLK_ENABLED
