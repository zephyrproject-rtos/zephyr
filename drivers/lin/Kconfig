menuconfig LIN
	bool "Local Interconnect Network (LIN) drivers"
	help
	  LIN (Local Interconnect Network) driver subsystem.

if LIN

module = LIN
module-str = LIN
source "subsys/logging/Kconfig.template.log_config"

config LIN_INIT_PRIORITY
	int "LIN driver init priority"
	default 80
	help
	  LIN driver device initialization priority.

config LIN_DEFAULT_BITRATE
	int "Default LIN bitrate"
	default 19200
	help
	  Default initial LIN bitrate in bits/s. This can be overridden per LIN controller using the
	  "bitrate" devicetree property.

config LIN_AUTO_SYNCHRONIZATION
	bool "LIN auto synchronization"
	default y
	help
	  Enable automatic synchronization of LIN frames. If disabled, the driver will not handle
	  frame synchronization.

# zephyr-keep-sorted-start
source "drivers/lin/Kconfig.skeleton"
source "drivers/lin/renesas/ra/Kconfig.renesas_ra"
# zephyr-keep-sorted-stop

source "drivers/lin/transceiver/Kconfig"

endif # LIN
