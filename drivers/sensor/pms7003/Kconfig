menuconfig PMS7003
	bool "PMS7003 particulate matter sensor"
	depends on SERIAL
	default n
	help
	  Enable driver for pms7003 particulate matter sensor.

config PMS7003_UART_DEVICE
	string "UART device"
	depends on PMS7003
	default "UART_3"

config PMS7003_DRIVER_NAME
	string "Driver name"
	depends on PMS7003
	default "PMS7003"
