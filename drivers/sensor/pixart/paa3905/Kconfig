config PAA3905
	bool "Optical Flow Sensor PAA3905"
	default y
	depends on DT_HAS_PIXART_PAA3905_ENABLED
	select SPI
	select SPI_RTIO
	select SENSOR_ASYNC_API
	help
	  Enable driver for PAA3905 Optical Flow sensor.
