config PAT9136
	bool "Optical Flow Sensor PAT9136"
	default y
	depends on DT_HAS_PIXART_PAT9136_ENABLED
	select SPI
	select SPI_RTIO
	select RTIO_WORKQ
	select SENSOR_ASYNC_API
	help
	  Enable driver for PAT9136 Optical Flow sensor.
