menuconfig ICM20948
	bool "ICM20948 Nine-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM20948_ENABLED
	select I2C if $(dt_compat_any_on_bus,$(DT_COMPAT_INVENSENSE_ICM20948),i2c)
	select SPI if $(dt_compat_any_on_bus,$(DT_COMPAT_INVENSENSE_ICM20948),spi)
	help
	  Enable driver for ICM20948 I2C-based nine-axis motion tracking device.

if ICM20948

choice
	prompt "Trigger mode"
	default ICM20948_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver.

config ICM20948_TRIGGER_NONE
	bool "No trigger"

config ICM20948_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM20948),int-gpios)
	select ICM20948_TRIGGER

config ICM20948_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM20948),int-gpios)
	select ICM20948_TRIGGER

endchoice

config ICM20948_TRIGGER
	bool

config ICM20948_THREAD_PRIORITY
	int "Thread priority"
	depends on ICM20948_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM20948_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICM20948_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ICM20948
