menuconfig ICM45605
	bool "ICM45605 High-precision 6-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM45605_ENABLED
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),spi)
	select SPI_RTIO if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),spi)
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i2c)
	select I2C_RTIO if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i2c)
	select I3C if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i3c)
	select I3C_RTIO if $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i3c)
	help
	  Enable driver for ICM45605 High-precision 6-axis motion
	  tracking device.

if ICM45605

choice
	prompt "Trigger mode"
	default ICM45605_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver

config ICM45605_TRIGGER_NONE
	bool "No trigger"

config ICM45605_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM45605),int-gpios)
	depends on !ICM45605_STREAM
	select ICM45605_TRIGGER

config ICM45605_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM45605),int-gpios)
	depends on !ICM45605_STREAM
	select ICM45605_TRIGGER

endchoice

config ICM45605_TRIGGER
	bool

config ICM45605_THREAD_PRIORITY
	int "Own thread priority"
	depends on ICM45605_TRIGGER_OWN_THREAD
	default 10
	help
	  The priority of the thread used for handling triggers.

config ICM45605_THREAD_STACK_SIZE
	int "Own thread stack size"
	depends on ICM45605_TRIGGER_OWN_THREAD
	default 1024
	help
	  The thread stack size.

config ICM45605_STREAM
	bool "Streaming mode"
	depends on GPIO || \
		   $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i3c)
	depends on $(dt_compat_any_has_prop,$(DT_COMPAT_INVENSENSE_ICM45605),int-gpios) || \
		   $(dt_compat_on_bus,$(DT_COMPAT_INVENSENSE_ICM45605),i3c)
	help
	  Enable streaming of sensor data.

endif # ICM45605
