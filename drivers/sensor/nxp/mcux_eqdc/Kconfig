# NXP enhanced Quadrature Decoder (eQDC) configuration options
config MCUX_EQDC
	bool "NXP eQDC driver"
	default y
	depends on DT_HAS_NXP_MCUX_EQDC_ENABLED
	imply MCUX_XBAR if DT_HAS_NXP_MCUX_XBAR_ENABLED
	imply MCUX_XBAR_1 if DT_HAS_NXP_MCUX_XBAR_1_ENABLED
	imply MCUX_XBARA if DT_HAS_NXP_MCUX_XBARA_ENABLED
	imply MCUX_XBARB if DT_HAS_NXP_MCUX_XBARB_ENABLED
	select PINCTRL
	help
	  Enable the NXP eQDC driver.

if MCUX_EQDC

config MCUX_EQDC_TRIGGER
	bool "EQDC trigger support"
	help
	  Enable trigger support for EQDC. This allows the driver to
	  generate interrupts on events like position roll-over/under.

endif # MCUX_EQDC
