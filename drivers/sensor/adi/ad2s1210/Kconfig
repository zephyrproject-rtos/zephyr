config AD2S1210
	bool "AD2S1210 10-bit to 16-bit resolution tracking resolver-to-digital converter"
	default y
	depends on DT_HAS_ADI_AD2S1210_ENABLED
	select GPIO
	select SPI
	help
	  Enable AD2S1210 10-bit to 16-bit resolution tracking resolver-to-digital converter.
