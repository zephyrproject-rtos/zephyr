config ADXL313
	bool "ADXL313 Three Axis accelerometer"
	default y
	depends on DT_HAS_ADI_ADXL313_ENABLED
	select I2C if $(dt_compat_on_bus,$(DT_COMPAT_ADI_ADXL313),i2c)
	select SPI if $(dt_compat_on_bus,$(DT_COMPAT_ADI_ADXL313),spi)
	select RTIO_WORKQ if SENSOR_ASYNC_API
	help
	  Enable driver for adxl313 Three-Axis Digital Accelerometer.

if ADXL313

choice ADXL313_TRIGGER_MODE
	prompt "Trigger mode"
	default ADXL313_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config ADXL313_TRIGGER_NONE
	bool "No trigger"

config ADXL313_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ADXL313_TRIGGER

config ADXL313_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ADXL313_TRIGGER

endchoice

config ADXL313_STREAM
	bool "Use FIFO to stream data"
	select ADXL313_TRIGGER
	depends on (SPI_RTIO || I2C_RTIO)
	depends on SENSOR_ASYNC_API
	help
	  Use this configuration option to enable streaming sensor data via RTIO.

config ADXL313_TRIGGER
	bool

config ADXL313_THREAD_PRIORITY
	int "Thread priority"
	depends on ADXL313_TRIGGER_OWN_THREAD && ADXL313_TRIGGER
	default 10
	help
	  Priority of thread used by the ddriver to handle interrupts.

config ADXL313_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ADXL313_TRIGGER_OWN_THREAD && ADXL313_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ADXL313
