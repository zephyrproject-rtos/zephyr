config QDEC_RENESAS_RA
	bool "Renesas RA family QDEC driver"
	default y
	depends on DT_HAS_RENESAS_RA_QDEC_ENABLED
	select USE_RA_FSP_GPT
	select PINCTRL
	help
	  Enable Renesas RA family Quadrature Decoder driver.
