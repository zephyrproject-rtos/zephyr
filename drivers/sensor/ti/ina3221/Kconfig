config INA3221
	bool "INA3221 Triple-Channel Current/Power Monitor"
	default y
	depends on DT_HAS_TI_INA3221_ENABLED
	select I2C
	help
	  Enable driver for INA3221 Triple-Channel Current/Power Monitor.
