config TACH_NPCX
	bool "Nuvoton NPCX Tachometer sensor"
	default y
	depends on DT_HAS_NUVOTON_NPCX_TACH_ENABLED
	depends on SOC_FAMILY_NPCX
	help
	  Enable the "Nuvoton NPCX tachometer sensor.
