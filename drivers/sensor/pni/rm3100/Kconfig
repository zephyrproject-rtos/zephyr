config RM3100
	bool "RM3100 3-Axis Magnetometer"
	default y
	depends on DT_HAS_PNI_RM3100_ENABLED
	select I2C
	select I2C_RTIO
	select SENSOR_ASYNC_API
	help
	  Enable driver for PNI RM3100 high-accuracy 3-axis magnetometer.
