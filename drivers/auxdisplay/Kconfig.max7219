config AUXDISPLAY_MAX7219_7SEG
	bool "MAX7219 8-Digit LED Display Driver"
	default y
	depends on DT_HAS_MAXIM_MAX7219_7SEG_ENABLED
	select SPI
	help
	  Enable driver for the Maxim MAX7219 SPI LED display driver.
	  It is supporting up to 64 individual LEDs per MAX7219.
