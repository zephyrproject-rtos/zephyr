	depends on DT_HAS_SIFLI_SF32LB_SPI_ENABLED
	select DMA if $(dt_compat_any_has_prop,$(DT_COMPAT_SIFLI_SF32LB_SPI),dmas)
	help
	  Enable SPI driver for SF32LB MCUs
