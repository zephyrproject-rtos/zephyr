config SPI_CC13XX_CC26XX
	bool "TI SimpleLink CC13xx / CC26xx SPI driver"
	default y
	depends on DT_HAS_TI_CC13XX_CC26XX_SPI_ENABLED
	help
	  Enable support for the TI SimpleLink CC13xx / CC26xx SPI peripheral
