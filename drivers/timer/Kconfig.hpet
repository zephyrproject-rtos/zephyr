config HPET_TIMER
	bool "HPET timer"
	select IOAPIC if X86
	select LOAPIC if X86
	imply TIMER_READS_ITS_FREQUENCY_AT_RUNTIME
	select TICKLESS_CAPABLE
	select TIMER_HAS_64BIT_CYCLE_COUNTER
	help
	  This option selects High Precision Event Timer (HPET) as a
	  system timer.
