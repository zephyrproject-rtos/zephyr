config DIGIPOT_AD528X
	bool "Analog Devices AD528x digipot driver"
	default y
	select I2C
	depends on DT_HAS_ADI_AD5280_ENABLED \
		|| DT_HAS_ADI_AD5282_ENABLED
	help
	  Enable the driver for the Analog Devices AD528x digipot