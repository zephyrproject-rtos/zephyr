config FLASH_NPCM_SPIP_QSPI
	bool "Nuvoton NPCM SPIP QSPI Bus Flash driver"
	default y
	depends on DT_HAS_NUVOTON_NPCM_SPIP_QSPI_ENABLED
	help
	  This option enables the SPIP QSPI Bus Flash driver for NPCM family
	  of processors.

config FLASH_NPCM_SPIP_SUPP_DRA_4B_ADDR
	bool "4 byte address support in Direct Read Access mode"
	default y
	help
	  Selected if NPCM series supports 4 byte address mode in Direct Read
	  Access mode.
