menuconfig AUDIO_CODEC
	bool "Audio Codec Drivers"
	help
	  Enable Audio Codec Driver Configuration

if AUDIO_CODEC

config AUDIO_CODEC_INIT_PRIORITY
	int "Init priority"
	default 60
	help
	  Audio codec device driver initialization priority.

config AUDIO_CODEC_SHELL
	bool "Audio Codec shell"
	depends on SHELL
	help
	  Enable the Audio Codec shell with Audio Codec related commands.

module = AUDIO_CODEC
module-str = audio codec
source "subsys/logging/Kconfig.template.log_config"

# zephyr-keep-sorted-start
source "drivers/audio/codec/Kconfig.cs43l22"
source "drivers/audio/codec/Kconfig.da7212"
source "drivers/audio/codec/Kconfig.max98091"
source "drivers/audio/codec/Kconfig.pcm1681"
source "drivers/audio/codec/Kconfig.tas6422dac"
source "drivers/audio/codec/Kconfig.tlv320aic3110"
source "drivers/audio/codec/Kconfig.tlv320dac"
source "drivers/audio/codec/Kconfig.wm8904"
source "drivers/audio/codec/Kconfig.wm8962"
# zephyr-keep-sorted-stop

endif # AUDIO_CODEC
