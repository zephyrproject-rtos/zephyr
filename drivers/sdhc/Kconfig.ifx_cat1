config SDHC_INFINEON_CAT1
	bool "Infineon CAT1 SDHC driver"
	default y
	depends on DT_HAS_INFINEON_CAT1_SDHC_SDIO_ENABLED
	select USE_INFINEON_SDIO
	select SDHC_SUPPORTS_NATIVE_MODE
	select PINCTRL
	help
	  This option enables the SDHC driver for Infineon CAT1 family.

config SDHC_INFINEON_CAT1_PDL
	bool "Infineon CAT1 PDL SDHC driver"
	default y
	depends on DT_HAS_INFINEON_CAT1_PDL_SDHC_SDIO_ENABLED
	select USE_INFINEON_SDIO
	select SDHC_SUPPORTS_NATIVE_MODE
	select PINCTRL
	help
	  This option enables the PDL based SDHC driver for Infineon CAT1 family.

if (SDHC_INFINEON_CAT1 || SDHC_INFINEON_CAT1_PDL)

config SDHC_INIT_PRIORITY
	default 70

endif
