config DAC_DACX311
	bool "TI DACx311/DACx411 DAC driver"
	default y
	depends on DT_HAS_TI_DAC8411_ENABLED || \
		DT_HAS_TI_DAC8311_ENABLED || DT_HAS_TI_DAC7311_ENABLED || \
		DT_HAS_TI_DAC6311_ENABLED || DT_HAS_TI_DAC5311_ENABLED
	select SPI
	help
	  Enable the driver for TI DACx311/DACx411 chip.
