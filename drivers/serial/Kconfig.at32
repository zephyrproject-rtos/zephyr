config USART_AT32
	bool "AT32 serial driver"
	default y
	depends on DT_HAS_ARTERY_AT32_USART_ENABLED
	select PINCTRL
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	select USE_AT32_USART
	help
	  This option enables the USART driver for AT32 SoC family.
