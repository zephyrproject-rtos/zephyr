menuconfig USART_MCUX_LPC
	bool "MCUX USART driver"
	depends on HAS_MCUX
	select SERIAL_HAS_DRIVER
	select SERIAL_SUPPORT_INTERRUPT
	help
	  Enable the MCUX USART driver.

if USART_MCUX_LPC

config USART_MCUX_LPC_0
	bool "USART 0"
	help
	  Enable USART 0.

endif # USART_MCUX_LPC
