config HWINFO_MCUX_SRC_V2
	bool "NXP SRC reset cause (multicore devices)"
	default y
	depends on DT_HAS_NXP_IMX_SRC_REV2_ENABLED
	select HWINFO_HAS_DRIVER
	help
	  Enable version 2 multicore NXP i.MX mcux SRC hwinfo driver.
