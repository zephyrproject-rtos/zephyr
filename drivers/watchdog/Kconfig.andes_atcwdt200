config WDT_ANDES_ATCWDT200
	bool "Andes Watchdog driver"
	default y
	depends on DT_HAS_ANDESTECH_ATCWDT200_ENABLED
	select COUNTER
	help
	  Enable driver for the Andes Watchdog driver.
