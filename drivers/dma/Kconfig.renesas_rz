config DMA_RENESAS_RZ_DMAC
	bool "Renesas RZ DMAC"
	default y
	depends on DT_HAS_RENESAS_RZ_DMAC_ENABLED
	select USE_RZ_FSP_DMAC
	help
	  Enable Renesas RZ DMAC Driver.

config DMA_RENESAS_RZ_DMAC_B
