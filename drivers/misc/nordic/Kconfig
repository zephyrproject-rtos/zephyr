config MISC_NORDIC
	bool

config NORDIC_NRF_POWER
	bool "Nordic nRF POWER driver"
	default y
	select NRFX_POWER
	select MISC_NORDIC
	depends on DT_HAS_NORDIC_NRF_POWER_ENABLED

config NORDIC_NRF_LRCCONF
	bool "Nordic nRF LRRCONF driver"
	default y
	select MISC_NORDIC
	depends on DT_HAS_NORDIC_NRF_LRCCONF_ENABLED
