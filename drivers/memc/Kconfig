config MEMC_NXP_EMC
	bool "NXP LPC External Memory Controller driver"
	default y
	depends on DT_HAS_NXP_LPC_EMC_ENABLED
	select PINCTRL
	help
	  Enable support for NXP LPC External Memory Controller (EMC).
	  This driver supports SDR SDRAM configuration and initialization.

if MEMC_NXP_EMC

config MEMC_INIT_PRIORITY
	int "Init priority"
	default 60
	help
	  Memory controller initialization priority. Should be higher
	  priority (lower number) than devices that use external memory.

endif # MEMC_NXP_EMC