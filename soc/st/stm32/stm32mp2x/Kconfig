config SOC_SERIES_STM32MP2X
	select ARM
	select CPU_HAS_FPU
	select HAS_STM32CUBE

config SOC_STM32MP2X_M33
	select ARMV8_M_DSP
	select ARM_TRUSTZONE_M
	select CPU_CORTEX_M33
	select CPU_CORTEX_M_HAS_DWT
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
