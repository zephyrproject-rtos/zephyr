config SOC_SERIES_S32K5
	select ARM
	select HAS_NXP_S32_HAL
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ICACHE
	select CPU_HAS_DCACHE
	select SOC_EARLY_INIT_HOOK

config SOC_S32K566_M7
	select CPU_CORTEX_M7
	select CPU_HAS_CUSTOM_FIXED_SOC_MPU_REGIONS

config SOC_S32K566_R52
	select ARM_ARCH_TIMER if SYS_CLOCK_EXISTS
	select CPU_CORTEX_R52
	select GIC_SINGLE_SECURITY_STATE
	select VFP_DP_D16
	select SOC_RESET_HOOK

if SOC_SERIES_S32K5

# SWT_STARTUP is enabled by default, use watchdog hook to disable it
config WDOG_INIT
	bool "Disable swt_startup out of reset"
	default y

endif
