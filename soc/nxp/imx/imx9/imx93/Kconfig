config SOC_MIMX9352_A55
	select ARM64
	select CPU_CORTEX_A55
	select ARM_ARCH_TIMER if SYS_CLOCK_EXISTS
	select HAS_MCUX if CLOCK_CONTROL
	select HAS_MCUX_CACHE

config SOC_MIMX9352_M33
	select ARM
	select CPU_CORTEX_M33
	select CPU_CORTEX_M_HAS_DWT
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select ARM_MPU
	select ARMV8_M_DSP
	select HAS_MCUX
	select HAS_MCUX_CACHE
	select SOC_EARLY_INIT_HOOK
	select SOC_RESET_HOOK

config MCUX_CORE_SUFFIX
	default "_ca55" if SOC_MIMX9352_A55
	default "_cm33" if SOC_MIMX9352_M33

if SOC_MIMX9352_M33

config TRDC_MCUX_TRDC_1
	default y
	bool "Use TRDC_1 MCUX Driver"
endif # SOC_MIMX9352_M33
