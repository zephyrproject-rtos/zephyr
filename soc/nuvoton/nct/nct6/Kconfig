# Nuvoton Cortex-M4 Embedded Controller NCT6 series

# Copyright (c) 2025 Nuvoton Technology Corporation.
# SPDX-License-Identifier: Apache-2.0

config SOC_SERIES_NCT6
	select ARM
	select CPU_CORTEX_M4
	select CPU_CORTEX_M_HAS_DWT
	select SOC_FAMILY_NCT
	select CPU_HAS_ARM_MPU
	help
	  Enable support for Nuvoton NCT6 series

config USBH_OHCI
    bool "Enable Nuvoton NCT USB OHCI Host Driver"
    default y
    help
      Enable support for USB OHCI host controller.
      
config USBH_HID
    bool "Enable USB Host HID"
    default y
    depends on USBH_OHCI
    help
      Enable support for HID on USBH.

config USBH_INIT_PRIORITY
    int "USBH initialization priority"
    default 50

