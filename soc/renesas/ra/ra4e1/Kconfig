config SOC_SERIES_RA4E1
	select ARM
	select CPU_HAS_ARM_MPU
	select CPU_CORTEX_M33
	select HAS_RENESAS_RA_FSP
	select CLOCK_CONTROL_RENESAS_RA_CGC if CLOCK_CONTROL
	select CPU_CORTEX_M_HAS_DWT
	select ARMV8_M_DSP
	select CPU_HAS_FPU
	select FPU
	select HAS_SWO
	select XIP
	select GPIO_RA_HAS_VBTICTLR

if SOC_SERIES_RA4E1

config RENESAS_PN_PACKAGE_TYPE
	int
	range 1 2
	default 1 if SOC_R7FA4E10D2CFM
	default 2 if SOC_R7FA4E10D2CNE
	help
	  Package type:
	  1 -> FM: LQFP 64 pins
	  2 -> NE: QFN 48 pins

endif # SOC_SERIES_RA4E1
