config SOC_SERIES_RA8E1
	select ARM
	select CPU_CORTEX_M85
	select CPU_HAS_ARM_MPU
	select CPU_HAS_FPU
	select CPU_HAS_ARM_SAU
	select ARMV8_M_DSP
	select FPU
	select HAS_SWO
	select XIP
	select CLOCK_CONTROL_RENESAS_RA_CGC if CLOCK_CONTROL
	select HAS_RENESAS_RA_FSP
	select CPU_CORTEX_M_HAS_DWT
	select GPIO_RA_HAS_VBTICTLR
	select HAS_PM

if SOC_SERIES_RA8E1

config RENESAS_PN_PACKAGE_TYPE
	int
	range 1 2
	default 1 if SOC_R7FA8E1AFDCFB
	help
	  Package type:
	  1 -> FB: LQFP 144 pins
	  2 -> FP: LQFP 100 pins

endif # SOC_SERIES_RA8E1
