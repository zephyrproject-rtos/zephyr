config SOC_SERIES_RA6M2
	select ARM
	select CPU_CORTEX_M4
	select CPU_HAS_ARM_MPU
	select HAS_RENESAS_RA_FSP
	select CLOCK_CONTROL_RENESAS_RA_CGC if CLOCK_CONTROL
	select CPU_CORTEX_M_HAS_DWT
	select CPU_HAS_FPU
	select FPU
	select HAS_SWO
	select XIP
	select SOC_EARLY_INIT_HOOK
	select GPIO_RA_HAS_VBTICTLR

if SOC_SERIES_RA6M2

config RENESAS_PN_ROM_SIZE
	hex
	default 0x100000 if SOC_R7FA6M2AF3CFB
	help
	  Code flash memory size

config RENESAS_PN_PACKAGE_TYPE
	int
	range 1 3
	default 1 if SOC_R7FA6M2AF3CFB
	help
	  Package type:
	  1 -> FB: LQFP 144 pins
	  2 -> FP: LQFP 100 pins
	  3 -> LK: LGA 145 pins

endif # SOC_SERIES_RA6M2
