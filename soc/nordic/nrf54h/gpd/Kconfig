config SOC_NRF54H20_GPD
	bool "Global Power Domain service"
	imply NRFS
	imply NRFS_GDPWR_SERVICE_ENABLED
	select ONOFF
	default y if !MCUBOOT && (SOC_NRF54H20_CPUAPP || SOC_NRF54H20_CPURAD)
	help
	  This option enables the Global Power Domain service.
