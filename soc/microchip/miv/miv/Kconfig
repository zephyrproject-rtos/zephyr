config SOC_SERIES_MIV
	select RISCV
	select RISCV_PRIVILEGED
	select RISCV_HAS_PLIC
	select RISCV_SOC_HAS_GP_RELATIVE_ADDRESSING
	imply XIP

config SOC_MIV
	select INCLUDE_RESET_VECTOR
