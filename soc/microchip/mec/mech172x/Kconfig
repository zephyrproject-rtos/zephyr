config SOC_SERIES_MECH172X
	select ARM
	select CPU_CORTEX_M4
	select CPU_CORTEX_M_HAS_DWT
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select HAS_SWO
	select HAS_MEC5_HAL
	select HAS_PM

if SOC_SERIES_MECH172X

config RTOS_TIMER
	bool "MECH172x RTOS Timer(32KHz) as kernel timer"

endif # SOC_SERIES_MECH172X
