config SOC_AMD_VERSALNET_RPU
	select ARM
	select ARM_ARCH_TIMER
	select CPU_CORTEX_R52
	select SOC_EARLY_INIT_HOOK
	select CPU_HAS_DCLS
	select GIC_SINGLE_SECURITY_STATE
	select CPU_HAS_ARM_MPU
	select ARM_MPU

config SOC_AMD_VERSALNET_APU
	select ARM64
	select ARM_ARCH_TIMER
	select CPU_CORTEX_A78
	select CPU_HAS_MMU
