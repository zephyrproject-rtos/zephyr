config SOC_SERIES_SIM3U
	bool
	select SOC_FAMILY_SILABS_SIM3
	help
	  Enable support for SiM3U MCU series

config SOC_SIM3U167BGM
	bool
	select SOC_SERIES_SIM3U

config SOC_SIM3U167AGQ
	bool
	select SOC_SERIES_SIM3U

config SOC_SERIES
	default "sim3u" if SOC_SERIES_SIM3U

config SOC
	default "sim3u167" if SOC_SIM3U167BGM
	default "sim3u167" if SOC_SIM3U167AGQ
