config SOC_SERIES_EFR32BG29
	select ARM
	select CPU_CORTEX_M33
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select CPU_CORTEX_M_HAS_DWT
	select ARMV8_M_DSP
	select ARM_TRUSTZONE_M
	select SOC_GECKO_HAS_RADIO
	select HAS_SILABS_SISDK
	select HAS_SWO
	select SOC_GECKO_CMU
	select SOC_GECKO_EMU
	select SOC_GECKO_GPIO
	select SOC_GECKO_DEV_INIT
	select SOC_GECKO_SE
	select HAS_PM

config SOC_SERIES_EFR32MG29
	select ARM
	select CPU_CORTEX_M33
	select CPU_HAS_FPU
	select CPU_HAS_ARM_MPU
	select CPU_HAS_ARM_SAU
	select CPU_CORTEX_M_HAS_DWT
	select ARMV8_M_DSP
	select ARM_TRUSTZONE_M
	select SOC_GECKO_HAS_RADIO
	select HAS_SILABS_SISDK
	select HAS_SWO
	select SOC_GECKO_CMU
	select SOC_GECKO_EMU
	select SOC_GECKO_GPIO
	select SOC_GECKO_DEV_INIT
	select SOC_GECKO_SE
	select HAS_PM

config SOC_GECKO_SDID
	default 240 if SOC_SERIES_EFR32BG29 || SOC_SERIES_EFR32MG29
