/ {
	chosen {
		zephyr,entropy = &rng;
	};

	soc {
		aes: aes@40026000 {
			compatible = "st,stm32-aes";
			reg = <0x40026000 0x400>;
			clocks = <&rcc STM32_CLOCK(AHB1, 16)>;
			resets = <&rctl STM32_RESET(AHB1, 16U)>;
			interrupts = <31 0>;
			status = "disabled";
		};

		rng: rng@40025000 {
			compatible = "st,stm32-rng";
			reg = <0x40025000 0x400>;
			interrupts = <31 1>;
			clocks = <&rcc STM32_CLOCK(AHB1, 18)>;
			status = "disabled";
		};
	};
};
