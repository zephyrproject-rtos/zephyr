#include <mem.h>
#include <silabs/xg28/xg28.dtsi>

/ {
	soc {
		compatible = "silabs,efm32pg28b310f1024im68",
					"silabs,efm32pg28",
					"silabs,xg28",
					"silabs,efm32",
					"simple-bus";
	};
};

&flash0 {
	reg = <0x08000000 DT_SIZE_K(1024)>;
};

&sram0 {
	reg = <0x20000000 DT_SIZE_K(256)>;
};
