#include <mem.h>
#include <silabs/xg24/efr32mg24.dtsi>

/ {
	sram0: memory@20000000 {
		reg = <0x20000000 DT_SIZE_K(256)>;
	};

	soc {
		compatible = "silabs,mgm240sd22vna", "silabs,efr32mg24", "silabs,xg24",
			     "silabs,efr32", "simple-bus";
	};
};

&flash0 {
	reg = <0x08000000 DT_SIZE_K(1536)>;
};

&radio {
	pa-voltage-mv = <1800>;
};
