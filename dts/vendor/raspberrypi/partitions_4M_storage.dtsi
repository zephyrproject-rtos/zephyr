&flash0 {
	status = "okay";

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <0x1>;
		#size-cells = <0x1>;

		code_partition: partition@0 {
			label = "code";
			reg = <0x0 DT_SIZE_M(1)>;
			read-only;
		};

		storage_partition: partition@100000 {
			label = "storage";
			reg = <0x100000 DT_SIZE_M(3)>;
		};
	};
};
