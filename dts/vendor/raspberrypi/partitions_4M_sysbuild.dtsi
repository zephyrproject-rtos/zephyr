&flash0 {
	status = "okay";

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <0x1>;
		#size-cells = <0x1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0x10000>;
		};

		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x10000 0xd0000>;
		};

		slot1_partition: partition@e0000 {
			label = "image-1";
			reg = <0xe0000 0xd0000>;
		};

		storage_partition: partition@1b0000 {
			label = "storage";
			reg = <0x1b0000 0x250000>;
		};
	};
};
