#include "skeleton.dtsi"
#include <dt-bindings/i2c/i2c.h>

/ {
	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "altera,nios2f";
			reg = <0>;
		};

	};

	flash0: flash@0 {
		compatible = "soc-nv-flash";
		reg = <0x00 0xb8000>;
	};

	sram0: memory@400000 {
		compatible = "mmio-sram";
		reg = <0x400000 0x20000>;
	};

	soc {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "simple-bus";
		ranges;

		uart0: uart@f0008000 {
			compatible = "ns16550";
			reg = <0xf0008000 0x400>;
			label = "UART_0";

			status = "disabled";
		};

		i2c0: i2c@100200 {
			compatible = "nios2,i2c";
			clock-frequency = <I2C_BITRATE_ULTRA>;
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0x100200 0x400>;
			label = "I2C_0";

		};
	};
};
